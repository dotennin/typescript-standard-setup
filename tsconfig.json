{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration":true,
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "paths": {
      "*": ["src/@types/*"]
    }
  },
  "include": [
    "**/*"
  ],
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "cache",
    "node_modules",
    ".cache",
    "dist"
  ]
}
