{
  "name": "typescript-standard-setup",
  "version": "2.0.0",
  "description": "",
  "type": "commonjs",
  "main": "dist/index.js",
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "tsc": "tsc -p tsconfig.build.json",
    "build:watch": "node build.js --watch",
    "build": "node build.js",
    "serve": "nodemon dist/index.js",
    "watch": "nodemon --watch 'src/**/*' -e ts --exec 'ts-node' ./src/index.ts",
    "eslint": "eslint --fix src/*.*",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "esbuild": "^0.15.12",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "13.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
