{
  "name": "typescript-standard-setup",
  "version": "2.0.0",
  "description": "",
  "main": "dist/index.js",
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "tsc": "tsc -p tsconfig.build.json",
    "lint": "eslint",
    "build:watch": "node build.js --watch",
    "build": "node build.js",
    "serve": "node dist/index.js",
    "watch": "nodemon --watch 'src/**/*' -e ts --exec 'ts-node' ./src/index.ts",
    "eslint": "eslint --fix src/*.*",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "esbuild": "^0.15.18",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
